<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE package SYSTEM "http://pear.php.net/dtd/package-1.0">
<package version="1.0">
	<name>XML_RPCAjax</name>
	<summary>An XML-RPC client implementation using AJAX</summary>
	<description>This class provides an object oriented interface for asynchronous server side PHP calls from client side javascript without the need for a full page request.
	</description>
	<maintainers>
		<maintainer>
			<user>gauthierm</user>
			<name>Michael Gauthier</name>
			<email>mike@silverorange.com</email>
			<role>lead</role>
		</maintainer>
	</maintainers>
	<release>
		<version>0.0.2</version>
		<date>2005-07-26</date>
		<license>LGPL</license>
		<state>alpha</state>
		<notes>Second release with a php file to easily include the javascript.
		</notes>
		<deps>
			<dep type="pkg" rel="ge" version="0.0.1" optional="no">XML_RPC2</dep>
		</deps>
		<filelist>
			<file role="php" baseinstalldir="XML" name="RPCAjax.php" />
			<file role="data" baseinstalldir="XML" name="www/javascript/XML_RPC_Client.js" />
			<file role="data" baseinstalldir="XML" name="www/javascript/XML_RPC_Exception.js" />
			<file role="data" baseinstalldir="XML" name="www/javascript/XML_RPC_Request.js" />
			<file role="data" baseinstalldir="XML" name="www/javascript/XML_RPC_Response.js" />
			<file role="data" baseinstalldir="XML" name="www/javascript/XML_RPC_Types.js" />
			<file role="test" baseinstalldir="XML" name="tests/countries.php" />
			<file role="test" baseinstalldir="XML" name="tests/multiply.php" />
			<file role="test" baseinstalldir="XML" name="tests/server.php" />
			<file role="doc" baseinstalldir="XML" name="README" />
		</filelist>
	</release>
	<changelog>
		<release>
			<version>0.0.1</version>
			<date>2005-07-05</date>
			<license>LGPL</license>
			<state>alpha</state>
			<notes>Initial import to subversion
			</notes>
		</release>
	</changelog>
</package>
